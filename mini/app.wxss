/**app.wxss**/
@import "pages/modify/weui.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
  height: 100%;
  background-color: #fff;
  font-size: 28rpx;
}

/* 清空默认button 样式  */
button{
  position: relative;
  margin-top: 0;
  padding-left: 0;
  padding-right: 0;
  padding-bottom: 0;
  line-height: 100rpx;
  background-color: #fff;
  border: none !important;
  border-radius: 0;
}
button::after,
button::before{
  content: '';
  border: none;
}



/*清除样式*/
.clear{ zoom:1; clear:both;}
.clear:after{ content:"."; height:0; line-height: 0; font-size: 0; overflow:hidden; display:block; clear:both; visibility:hidden;}

.left{float: left;}
.right{float: right;}

.display-box{display: -webkit-box; display: -webkit-flex; display: flex;}
.flex{-webkit-box-flex:1; -webkit-flex:1; flex:1;}

.show{display: block;}
.hide{display: none;}

.page_title{position: relative; z-index: 1; height: 86rpx; line-height: 86rpx; text-align: center; font-size: 38rpx; color: #000; background-color: #fff;}

/*返回按钮*/
.back_btn{position: absolute; bottom: 0; left: 0; z-index: 1001; width: 36rpx; height: 36rpx; padding: 25rpx; overflow: hidden;}
.back_btn .img_btn{width: 36rpx; height: 36rpx; vertical-align: top;}

.idx_icon{position: absolute; bottom: 22rpx; left: 86rpx; z-index: 1; width: 42rpx; height: 42rpx; overflow: hidden;}
.idx_icon image{width: 42rpx; height: 42rpx; vertical-align: top;}

/*iPhone X适配*/
.ipx_bottom{height: 68rpx;}

.statusBarBg{background-color: #fff;}

.user_avatar{position: absolute; top: 12rpx; left: 12rpx; z-index: 1; width: 62rpx; height: 62rpx;}
.user_avatar .avatar_img{width: 60rpx; height: 60rpx; vertical-align: top; border: 1rpx solid #e1e9f2; border-radius: 100%;}

.login_button{position: absolute; top: 0; left: 0; z-index: 1; width: 62rpx; height: 62rpx; background-color: transparent;}

.content_panel{
  /* display: none; */
  position: fixed; top: 0; left: 0; z-index: 1001; width: 100%; height: 100%;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
}
.mask{position: absolute; top: 0; left: 0; z-index: -1; width: 100%; height: 100%; background-color: rgba(0, 0, 0, .4);}
.content_main{position: relative; z-index: 1; width: 640rpx; border-radius: 6rpx; background-color: #fff;}
.header_close{padding: 10rpx; text-align: right;}
.close_btn{display: inline-block; width: 32rpx; height: 32rpx; vertical-align: top;}
.content_title{padding: 0 0 20rpx; text-align: center; font-size: 36rpx; color: #000;}
.content_massage{padding: 12rpx 42rpx 42rpx; font-size: 30rpx; color: #7d7d7d; white-space: normal;}
.content_sub{border-top: 1rpx solid #ededed; text-align: center; font-size: 36rpx;}
.content_sub .lbtn{border-right: 1rpx solid #ededed;}
.content_sub .rbtn{line-height: 96rpx;}
.content_sub .p_btn{width: 100%; height: 100%; background-color: #fff;}

/*底部推广tips*/
.ad_tips{position: fixed; bottom: 0; left: 0; right: 0; z-index: 99; padding: 10rpx 12rpx; background-color: rgba(0,0,0,.7);}
.ad_tips .ad_btn{width: 100%; height: 32rpx; padding: 0; line-height: 32rpx; font-size: 24rpx; color: #13c6e6; border: none; vertical-align: top; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;}
/* .enter_this{text-decoration: underline;} */

.common_panel{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
}

.page_container{position: relative; z-index: 1;}