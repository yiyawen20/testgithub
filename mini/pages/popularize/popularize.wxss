/* pages/popularize/popularize.wxss */
page {
  display: flex;
  flex-direction: column;
}

.content {
  display: flex;
  flex: 1;
  width: 100%;
  position: relative;
  align-items: center;
}

.background {
  width: 100%;
  height: 100%;
}

.content_info {
  width: 100%;
  height: 1210rpx;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-content: center;
  margin: auto auto;
}

.desc {
  margin: 56rpx auto 30rpx auto;
  text-align: center;
  font-size: 30rpx;
}

.share_card {
  position: relative;
  width: 600rpx;
  height: 848rpx;
  background-color: white;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  box-shadow: 0 12rpx 16rpx rgba(0, 0, 0, 0.15);
}

.photo {
  width: 600rpx;
  height: 670rpx;
  border-radius: 40rpx 40rpx 0 0;
}

.refresh {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  width: 90rpx;
  height: 90rpx;
}

.user_info { 
  margin-top: 22rpx;
  display: flex;
  align-items: center;
}

.avatar {
  margin-left: 32rpx;
  margin-right: 10rpx;
  width: 74rpx;
  height: 74rpx;
  border-radius: 37rpx;
}

.nickname {
  font-size: 30rpx;
}

.slogan {
  margin-top: 14rpx;
  margin-left: 32rpx;
  font-size: 24rpx;
}

.code {
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
  width: 190rpx;
  height: 190rpx;
  z-index: 5;
}

.code_bg {
  position:absolute;
  bottom: 42rpx;
  right: 42rpx;
  background-color: white;
  width: 206rpx;
  height: 206rpx;
  border-radius: 103rpx;
}

.save_button {
  width: 680rpx;
  height: 88rpx;
  margin-top: 52rpx;
  border-radius: 12rpx;
  background-color: rgb(254, 89, 85);
  color: white;
  display: flex;
  justify-content: center;
  line-height: 88rpx;
}